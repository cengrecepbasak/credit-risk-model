# 04 Model Optimization - Credit Risk
import pandas as pd
import numpy as np
from sklearn.model_selection import StratifiedKFold
from sklearn.metrics import roc_auc_score
import lightgbm as lgb
import optuna

# Load engineered data
df = pd.read_csv('data/processed/application_train_fe.csv')
y = df['TARGET']
X = df.drop('TARGET', axis=1)

# Fill any remaining missing values
X = X.fillna(X.median(numeric_only=True))

# Define objective function for Optuna optimization
def objective(trial):
    params = {
        'objective': 'binary',
        'metric': 'auc',
        'boosting_type': 'gbdt',
        'num_leaves': trial.suggest_int('num_leaves', 20, 150),
        'learning_rate': trial.suggest_float('learning_rate', 0.01, 0.2),
        'feature_fraction': trial.suggest_float('feature_fraction', 0.6, 1.0),
        'bagging_fraction': trial.suggest_float('bagging_fraction', 0.6, 1.0),
        'bagging_freq': trial.suggest_int('bagging_freq', 1, 10),
        'min_child_samples': trial.suggest_int('min_child_samples', 5, 100),
        'verbose': -1
    }

    skf = StratifiedKFold(n_splits=5, shuffle=True, random_state=42)
    aucs = []
    for train_idx, val_idx in skf.split(X, y):
        X_train, X_val = X.iloc[train_idx], X.iloc[val_idx]
        y_train, y_val = y.iloc[train_idx], y.iloc[val_idx]
        
        lgb_train = lgb.Dataset(X_train, y_train)
        lgb_val = lgb.Dataset(X_val, y_val, reference=lgb_train)
        
        gbm = lgb.train(params, lgb_train, valid_sets=[lgb_val], verbose_eval=False, early_stopping_rounds=50)
        preds = gbm.predict(X_val)
        auc = roc_auc_score(y_val, preds)
        aucs.append(auc)
    return np.mean(aucs)

# Optimize
study = optuna.create_study(direction='maximize')
study.optimize(objective, n_trials=50)

# Best parameters
best_params = study.best_params

# Train final model with best parameters
final_params = best_params.copy()
final_params.update({'objective':'binary','metric':'auc','verbose':-1})

final_model = lgb.LGBMClassifier(**final_params, n_estimators=1000)
final_model.fit(X, y)

# Save final model
import joblib
joblib.dump(final_model, 'models/lightgbm_final.pkl')

