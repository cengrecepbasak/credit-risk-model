# 06 Final Pipeline - Credit Risk
import pandas as pd
import numpy as np
import joblib
from sklearn.preprocessing import LabelEncoder
from lightgbm import LGBMClassifier

# Load raw data
raw_data_path = 'data/raw/application_train.csv'
df = pd.read_csv(raw_data_path)

# Feature Engineering Function
def feature_engineering(df):
    df_fe = df.copy()
    # Ratio Features
    df_fe['CREDIT_INCOME_RATIO'] = df_fe['AMT_CREDIT'] / (df_fe['AMT_INCOME_TOTAL'] + 1)
    df_fe['ANNUITY_INCOME_RATIO'] = df_fe['AMT_ANNUITY'] / (df_fe['AMT_INCOME_TOTAL'] + 1)
    df_fe['CREDIT_ANNUITY_RATIO'] = df_fe['AMT_CREDIT'] / (df_fe['AMT_ANNUITY'] + 1)
    # External Sources
    ext_cols = ['EXT_SOURCE_1', 'EXT_SOURCE_2', 'EXT_SOURCE_3']
    df_fe[ext_cols] = df_fe[ext_cols].fillna(df_fe[ext_cols].median())
    df_fe['EXT_SOURCES_MEAN'] = df_fe[ext_cols].mean(axis=1)
    df_fe['EXT_SOURCES_MIN'] = df_fe[ext_cols].min(axis=1)
    df_fe['EXT_SOURCES_MAX'] = df_fe[ext_cols].max(axis=1)
    # Document count
    doc_cols = [col for col in df_fe.columns if 'FLAG_DOCUMENT' in col]
    df_fe['DOCUMENT_COUNT'] = df_fe[doc_cols].sum(axis=1)
    # Family features
    df_fe['CHILDREN_RATIO'] = df_fe['CNT_CHILDREN'] / (df_fe['CNT_FAM_MEMBERS'] + 1)
    # Employment features
    df_fe['DAYS_EMPLOYED_POS'] = df_fe['DAYS_EMPLOYED'].apply(lambda x: 0 if x == 365243 else x)
    df_fe['EMPLOYED_YEARS'] = df_fe['DAYS_EMPLOYED_POS'] / -365
    # Encode categoricals
    cat_cols = df_fe.select_dtypes(include=['object']).columns
    le = LabelEncoder()
    for col in cat_cols:
        df_fe[col] = df_fe[col].astype(str)
        df_fe[col] = le.fit_transform(df_fe[col])
    # Fill remaining missing
    df_fe = df_fe.fillna(df_fe.median(numeric_only=True))
    return df_fe

# Apply feature engineering
X = feature_engineering(df)
y = X.pop('TARGET')

# Load trained model
model = joblib.load('models/lightgbm_final.pkl')

# Fit on all data
model.fit(X, y)

# Save pipeline model
joblib.dump(model, 'models/final_pipeline_model.pkl')

# Inference function
def predict(df_raw):
    df_fe = feature_engineering(df_raw)
    preds_proba = model.predict_proba(df_fe)[:,1]
    preds_class = (preds_proba > 0.5).astype(int)
    return preds_class, preds_proba